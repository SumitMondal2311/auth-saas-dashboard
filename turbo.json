{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "api#build": {
            "dependsOn": ["^build"],
            "env": ["PORT", "DB_URL"],
            "outputs": ["dist/**"]
        },
        "@repo/db#build": {
            "dependsOn": ["^build"],
            "env": ["DB_MAX_RETRIES"],
            "outputs": ["dist/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false
        },
        "start": {
            "dependsOn": ["^start"],
            "cache": false
        },
        "start:dev": {
            "dependsOn": ["^start:dev"],
            "cache": false
        }
    }
}
