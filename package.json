{
    "name": "auth-saas-mvp",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:apps": "turbo build -F api",
        "build:pkgs": "turbo build -F @repo/**",
        "check-types": "turbo check-types",
        "clean": "rimraf **/*/dist",
        "db:deploy": "dotenv -e apps/api/.env.production -- pnpm -F @repo/db db:deploy",
        "db:generate": "dotenv -e apps/api/.env.development -- pnpm -F @repo/db db:generate",
        "db:migrate": "dotenv -e apps/api/.env.development -- pnpm -F @repo/db db:migrate",
        "db:push": "dotenv -e apps/api/.env.development -- pnpm -F @repo/db db:push",
        "db:reset": "dotenv -e apps/api/.env.development -- pnpm -F @repo/db db:reset",
        "db:studio": "dotenv -e apps/api/.env.development -- pnpm -F @repo/db db:studio",
        "dev": "NODE_ENV=development turbo dev",
        "docker:down": "docker-compose down",
        "docker:up": "docker-compose up",
        "format": "prettier --write **/*.{json,js,mjs,ts,jsx,tsx}",
        "lint": "turbo lint",
        "prepare": "husky",
        "start": "NODE_ENV=production turbo start",
        "start:dev": "NODE_ENV=development turbo start:dev"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "dependencies": {
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.9.1",
        "dotenv-cli": "^10.0.0",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "rimraf": "^6.0.1",
        "turbo": "^2.5.8",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.19.0",
    "engines": {
        "node": ">=18"
    }
}
